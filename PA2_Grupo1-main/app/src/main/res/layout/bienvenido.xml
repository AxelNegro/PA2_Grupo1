<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="android.intent.category.LAUNCHER"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B0FF"
    tools:context=".bienvenido">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="@string/bienvenido"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnContinuar"
        android:layout_width="382dp"
        android:layout_height="146dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:onClick="Redireccionar"
        android:text="@string/bvn2"
        android:textColor="#FDFFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btniniciarsession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.743"
        tools:text="@string/bvn2" />

    <Button
        android:id="@+id/btniniciarsession"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="183dp"
        android:layout_height="46dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/btn_dos"
        android:onClick="Redireccionar"
        android:text="@string/btnbnv"
        android:textColor="@drawable/txt_btn_dos"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>