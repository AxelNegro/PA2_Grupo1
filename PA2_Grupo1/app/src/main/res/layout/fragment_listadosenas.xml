<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.ListadoSenas.fragListadoSenas">

    <GridView
        android:id="@+id/listaSenas"
        android:layout_width="398dp"
        android:layout_height="450dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarSena"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etSearchSena"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/BuscarSena"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscarSena"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="159dp"
        android:layout_height="46dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_dos"
        android:text="@string/btnBuscarUser"
        android:textColor="@drawable/txt_btn_dos"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etSearchSena" />
</androidx.constraintlayout.widget.ConstraintLayout>